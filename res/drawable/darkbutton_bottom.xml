<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="true"
          android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#000000"
                android:endColor="#222222"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:topLeftRadius="8dip"
                android:topRightRadius="8dip"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>        
    </item>
    <item android:state_enabled="true"
          android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#95ba32"
                android:endColor="#728836"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#596d24" />
            <corners
                android:topLeftRadius="8dip"
                android:topRightRadius="8dip"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>     
    </item>

</selector>